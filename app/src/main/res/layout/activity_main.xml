<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FEFEFE">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Fragment_container"
        android:layout_above="@+id/bottombar"/>



    <LinearLayout
       android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:elevation="10dp"
        android:gravity="center"
        android:background="@color/white"
        android:layout_alignParentBottom="true"
        tools:targetApi="lollipop"
        >
        <LinearLayout
            android:id="@+id/trangchuLayout"
            android:background="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            >
          <ImageView
              android:id="@+id/trangchuimage"
              android:layout_width="15dp"
              android:layout_height="wrap_content"
              android:src="@drawable/trangchu"
              android:adjustViewBounds="true"
              />
            <TextView
                android:layout_marginLeft="10dp"
                android:id="@+id/trangchutxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:textStyle="bold"
                android:textColor="#3A3C38"
                android:textSize="13dp"
                />
        </LinearLayout>

        <LinearLayout
            android:background="@drawable/transparent"
            android:id="@+id/danhmucLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/danhmucimage"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/danhmuc"/>
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:id="@+id/danhmuctxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="danh mục"
                android:textStyle="bold"
                android:textColor="#3A3C38"
                android:textSize="13dp"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/transparent"
            android:id="@+id/yeuthich_Layout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/yeuthichimage"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_yeuthich"/>
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:id="@+id/yeuthichtxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="thích"
                android:textStyle="bold"
                android:textColor="#3A3C38"
                android:textSize="13dp"
                />
        </LinearLayout>
        <LinearLayout
            android:background="@drawable/transparent"
            android:id="@+id/canhanLayout"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:orientation="horizontal"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:gravity="center"
            android:layout_weight="1"
            >
            <ImageView
                android:adjustViewBounds="true"
                android:id="@+id/canhanimage"
                android:layout_width="20dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_canhan"/>
            <TextView
                android:visibility="gone"
                android:layout_marginLeft="10dp"
                android:id="@+id/canhantxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="cá nhân"
                android:textStyle="bold"
                android:textColor="#3A3C38"
                android:textSize="13dp"
                />
        </LinearLayout>
    </LinearLayout>

