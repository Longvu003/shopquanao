<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="#FFFFFF">


    <TextView
        android:id="@+id/tensp_lichsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="hello"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/giasp_lichsu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textColor="#ff00"
        app:layout_constraintLeft_toLeftOf="@id/tensp_lichsu"
        app:layout_constraintTop_toBottomOf="@id/tensp_lichsu" />
    <TextView
        android:id="@+id/txtHoten"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="béo"
        app:layout_constraintLeft_toLeftOf="@id/giasp_lichsu"
        app:layout_constraintTop_toBottomOf="@id/giasp_lichsu" />
    <TextView
        android:id="@+id/txtEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="béo"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="@id/txtHoten"
        app:layout_constraintTop_toBottomOf="@id/txtHoten"/>
    <TextView
        android:id="@+id/txtSdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="béo"
        app:layout_constraintLeft_toLeftOf="@id/txtEmail"
        app:layout_constraintTop_toBottomOf="@id/txtEmail"/>
    <TextView
        android:id="@+id/txtDiachi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="béo"
        app:layout_constraintLeft_toLeftOf="@id/txtSdt"
        app:layout_constraintTop_toBottomOf="@id/txtSdt" />

</androidx.constraintlayout.widget.ConstraintLayout>